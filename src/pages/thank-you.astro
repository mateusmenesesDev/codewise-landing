---
import CalendlySchedule from '../components/CalendlySchedule';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You - CodeWise">
	<main class="min-h-screen bg-secondary/50 py-16 md:py-24">
		<div class="container mx-auto px-4 md:px-6">
			<div class="mx-auto max-w-2xl text-center">
				<div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-primary/10 text-primary">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="h-8 w-8"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width={2}
							d="M5 13l4 4L19 7"
						/>
					</svg>
				</div>
				<h1 class="mb-4 font-bold text-3xl md:text-4xl">Thank You for Applying!</h1>
				<p class="mb-8 text-muted-foreground">
					Your application has been received. Please schedule your free mentorship session below.
				</p>
				<CalendlySchedule />
			</div>
		</div>
	</main>
</Layout> 