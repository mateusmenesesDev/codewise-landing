---
import { Image } from 'astro:assets';
import { ArrowRight } from 'lucide-react';
import heroImage from '../../../assets/images/hero.jpeg';
import { Button } from '../../ui/button';
---

<section
	class="bg-gradient-to-b from-mentor-lightBlue/30 to-white pt-28 pb-16 md:pt-32 md:pb-24"
	id="hero"
>
	<div class="container mx-auto px-4 md:px-6">
		<div class="flex flex-col items-center md:flex-row">
			<div class="mb-10 w-full animate-fadeIn md:mb-0 md:w-1/2">
				<h1 class="mb-6 font-bold text-4xl leading-tight md:text-5xl lg:text-6xl">
					Accelerate Your Growth With{' '}
					<span class="text-mentor-purple">
						Free Professional Mentorship
					</span>
				</h1>
				<p class="mb-8 text-gray-700 text-lg md:max-w-xl md:text-xl">
					Connect with experienced mentors who are committed to helping you
					achieve your goals. Limited-time free sessions available now.
				</p>
				<div class="flex flex-col space-y-4 sm:flex-row sm:space-x-4 sm:space-y-0">
					<a href="#cta" class="flex items-center">
						<Button className="bg-mentor-purple px-8 py-6 text-lg text-white hover:bg-opacity-90">
							Start Your Free Mentorship{' '}
							<ArrowRight className="ml-2 h-5 w-5" />
						</Button>
					</a>

					<a href="#how-it-works">
						<Button
							variant="outline"
							className="border-mentor-purple px-8 py-6 text-lg text-mentor-purple hover:bg-mentor-purple/10"
						>
							How It Works
						</Button>
					</a>
				</div>
			</div>
			<div class="w-full animate-fadeIn delay-100 md:w-1/2">
				<div class="relative">
					<Image
						src={heroImage}
						alt="Mentorship Session"
						class="rounded-lg shadow-2xl"
						width={500}
						height={500}
						loading="eager"
						fetchpriority="high"
						decoding="async"
					/>
					<div class="-bottom-6 -left-6 absolute rounded-lg bg-white p-4 shadow-lg">
						<div class="font-bold text-mentor-purple text-xl">
							100% Free
						</div>
						<div class="text-gray-600">Limited time offer</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

