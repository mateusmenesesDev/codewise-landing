---
import ContactForm from './ContactForm.astro';
---

<section id="contact" class="section-padding">
	<div class="container mx-auto">
		<div class="glass mx-auto max-w-5xl translate-y-10 rounded-2xl p-8 md:p-12 lg:p-16">
			<div class="grid grid-cols-1 gap-12 md:grid-cols-2">
						<div>
							<div class="mb-4 inline-block rounded-full bg-primary/10 px-3 py-1 font-medium text-primary text-sm">
								Let's Connect
							</div>
							<h2 class="mb-6 font-bold text-3xl">
								Ready to Start Your Mentorship Journey?
							</h2>
							<p class="mb-8 text-muted-foreground">
								Whether you have questions about our program or are ready to be
								matched with a mentor, we're here to help you take the next
								step.
							</p>

							<div class="flex items-start">
								<div class="mr-4 flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary">
									<svg
										xmlns="http://www.w3.org/2000/svg"
										class="h-5 w-5"
										fill="none"
										viewBox="0 0 24 24"
										stroke="currentColor"
										aria-label="Chat icon"
									>
										<title>Chat icon</title>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width={2}
											d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
										/>
									</svg>
								</div>
								<div>
									<h3 class="mb-1 font-semibold">Live Chat</h3>
									<a
										href="https://www.linkedin.com/in/mateus-meneses/"
										target="_blank"
										rel="noopener noreferrer"
										class="text-primary hover:underline"
									>
										Start a conversation
									</a>
								</div>
							</div>
						</div>

						<ContactForm />
					</div>
			</div>
		</div>
	</div>
</section>
